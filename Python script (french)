--- Here's my script ---

import random

# functions
def cardname(n):
	if n<0 or n>51 : return "carte invalide"
	if int(n)!=n : return "carte invalide"

	res=""

	#valeur
	# if n%13 == 0 : res="as"
	# if n%13 == 1 : res="2"
	# if n%13 == 2 : res="3"
	# if n%13 == 3 : res="4"
	# if n%13 == 4 : res="5"
	# if n%13 == 5 : res="6"
	# if n%13 == 6 : res="7"
	# if n%13 == 7 : res="8"
	# if n%13 == 8 : res="9"
	# if n%13 == 9 : res="10"
	# if n%13 == 10 : res="valet"
	# if n%13 == 11 : res="dame"
	# if n%13 == 12 : res="roi"

	res = ["as","2","3","4","5","6","7","8","9","10","valet","dame","roi"][n%13]

	res += " de "

	# couleurs
#	if n//13 == 0 : res+="trefle"
#	if n//13 == 1 : res+="carreaux"
#	if n//13 == 2 : res+="coeurs"  
#	if n//13 == 3 : res+="piques"



	res += ["trefle", "carreaux", "coeurs", "piques"][n//13]

	#print res

	return res

def liste_mains(mains):

	noms_des_mains = []

	for i in range(len(mains)):
		main = mains[i]
		nom_de_la_main = []
		for carte in main:
			nom_de_la_main.append(cardname(carte))
		if (i == 0):
			noms_des_mains.append("main du dealer :" + str(nom_de_la_main))
		else:
			noms_des_mains.append("main du joueur " + str(i) + " :" + str(nom_de_la_main))
	return noms_des_mains

def generate_deck():

	deck=[]
	ordered_deck=range(52)
	for i in range(52) :

		r=random.randint(0,51-i)

		#print "liste des i", i
		#print "liste des r", r

		deck.append(ordered_deck[r])

  # remove supprime la premiere occurence d'un element d'une liste

  # ici chaque carte n'est presente qu'une fois dans ordered_deck on peut donc utiliser remove

		ordered_deck.remove(ordered_deck[r])
		


	assert len(deck) == 52  

	return deck



def evaluer_carte(n):

	v = [11,2,3,4,5,6,7,8,9,10,10,10,10][n%13]

	return v


def evaluer_main(l):

	s=0

	for i in l:
		s += evaluer_carte(i)

	return s

def main():

	deck = generate_deck()

	n=input("nombre de joueurs ?")

	print "n= ", n

	mains = []
	for i in range(n+1):
		mains.append([])

    		
    # le croupier est le dernier joueur ici

    # le croupier distribue une carte a chaque joueur puis une a lui meme, puis re distribue une carte aux joueurs. C'est la regle en Europe

	for j in range(n + 1): 		 
		mains[j].append(deck.pop())

	for j in range(n):
			mains[j].append(deck.pop())

	print liste_mains(mains)

	


# tests de cardname(n)
#print "ma carte est 0 et cardname retourne : " + cardname(0)
