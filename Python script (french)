#print "ma carte est 31.3 et cardname retourne : " + cardname(31.3)
assert cardname(0) == "as de trefle"
assert cardname(13) == "as de carreaux"
assert cardname(26) == "as de coeurs"
assert cardname(39) == "as de piques"
assert cardname(40) == "2 de piques"
assert cardname(48) == "10 de piques"
assert cardname(51) == "roi de piques"

# test de generate deck

deck=generate_deck()

assert len(deck) == 52

for i in range(52):
	assert i in deck

